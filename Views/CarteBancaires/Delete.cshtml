@model ProjetGo.CarteBancaire

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Voulez-vous vraiment supprimer la carte?</h3>
<div>
    <h4>Carte Bancaire</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Date d'expiration
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateExpirationCateBancaire)
        </dd>

        <dt>
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomDetenteurCarteBancaire)
        </dd>

        <dt>
            Adresse
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adresseDetenteurCarteBaincaire)
        </dd>

        <dt>
            Ville
        </dt>

        <dd>
            @Html.DisplayFor(model => model.villeDetenteurCarteBaincaire)
        </dd>

        <dt>
            Pronvince
        </dt>

        <dd>
            @Html.DisplayFor(model => model.provinceDetenteurCarteBaincaire)
        </dd>

        <dt>
            Code postal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpDetenteurCarteBaincaire)
        </dd>

        <dt>
            Numéro controle
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroControleCarteBancaire)
        </dd>

        <dt>
            Statut
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Membre.nomStatut)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Effacer" class="btn btn-danger" /> |
            <button class="btn btn-b-n">@Html.ActionLink("Retour à la liste", "Index")</button>
        </div>
    }
</div>
