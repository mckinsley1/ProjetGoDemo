            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.provinceDetenteurCarteBaincaire, "Province", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.provinceDetenteurCarteBaincaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.provinceDetenteurCarteBaincaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cpDetenteurCarteBaincaire, "Code postal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cpDetenteurCarteBaincaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cpDetenteurCarteBaincaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numeroControleCarteBancaire, "Numéro controle", htmlAttributes: new { @class = "control-label col-md-2" })
