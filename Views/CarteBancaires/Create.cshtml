            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codeMembre, "Code Membre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codeMembre", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codeMembre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-b-n" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>

@section Scripts {
