@model ProjetGo.CarteBancaire

@{
    ViewBag.Title = "Create";
}

<h2>Nouvelle carte</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ajouter une carte bancaire</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.numeroCarteBancaire, "Numéro carte", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numeroCarteBancaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numeroCarteBancaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dateExpirationCateBancaire, "Date d'expiration", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.dateExpirationCateBancaire, new { @type = "date", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.dateExpirationCateBancaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomDetenteurCarteBancaire, "Nom détenteur", htmlAttributes: new { @class = "control-label col-md-2" })
