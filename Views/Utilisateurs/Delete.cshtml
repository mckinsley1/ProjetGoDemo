@model ProjetGo.Utilisateur

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Voulez-vous vraiment supprimer le membre: @Html.DisplayFor(model => model.nomUser)?</h3>

<div>
    <h4>@Html.HiddenFor(model => model.codeUser)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomUser)
        </dd>

        <dt>
            Prénom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prenomUser)
        </dd>

        <dt>
            Courriel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emailUser)
        </dd>

        <dt>
            Mot de passe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.passwordUser)
        </dd>

        <dt>
            Téléphone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numPhoneUser)
        </dd>

        <dt>
            Adresse
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adresseUser)
        </dd>

        <dt>
            Ville
        </dt>

        <dd>
            @Html.DisplayFor(model => model.villeUser)
        </dd>

        <dt>
            Code postal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpUser)
        </dd>

        <dt>
            Pays
        </dt>

        <dd>
            @Html.DisplayFor(model => model.paysUser)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Effacer" class="btn btn-danger" /> |
            <button class="btn btn-b-n">@Html.ActionLink("Retour à la liste", "Index")</button>
        </div>
    }
</div>
