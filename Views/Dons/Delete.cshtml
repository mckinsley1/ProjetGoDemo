@model ProjetGo.Don

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Voulez-vous vraiment supprimer ce don?</h3>
<div>
    <h4>Don</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Montant
        </dt>

        <dd>
            @Html.DisplayFor(model => model.montantDon)
        </dd>

        <dt>
            Type de paiement
        </dt>

        <dd>
            @Html.DisplayFor(model => model.typePaiementDon)
        </dd>

        <dt>
            Prenom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prenomDonateur)
        </dd>

        <dt>
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomDonateur)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateDon)
        </dd>

        <dt>
            Courriel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emailDonateur)
        </dd>

        <dt>
            Téléphone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numPhoneDonateur)
        </dd>

        <dt>
            Adresse
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adresseDonateur)
        </dd>

        <dt>
            Ville
        </dt>

        <dd>
            @Html.DisplayFor(model => model.villeDonateur)
        </dd>

        <dt>
            Code postal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpDonateur)
        </dd>

        <dt>
            Pays
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaysDonateur)
        </dd>

        <dt>
            Titre campagne de levée de fond
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CampagneLeveeFond.titreCampagneLeveeFond)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Effacer" class="btn btn-danger" /> |
            <button class="btn btn-b-n">@Html.ActionLink("Retour à la liste", "Index")</button>
        </div>
    }
</div>
