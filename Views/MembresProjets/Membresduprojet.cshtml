@model IEnumerable<ProjetGo.MembresProjet>


<p>
    @Html.ActionLink("Ajouter un membre au projet", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.responsableProjet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Membre.nomStatut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Projet.titreProjet)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.responsableProjet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Membre.nomStatut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projet.titreProjet)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.codeMembreProjet }) |
                @Html.ActionLink("Détails", "Details", new { id = item.codeMembreProjet }) |
                @Html.ActionLink("Effacer", "Delete", new { id = item.codeMembreProjet })
            </td>
        </tr>
    }

</table>
